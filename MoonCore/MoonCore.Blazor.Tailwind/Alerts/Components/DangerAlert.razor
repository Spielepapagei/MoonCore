@using MoonCore.Blazor.Tailwind.Modals.Components

@inherits BaseModal

<div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-danger-500">
    <i class="icon-circle-alert text-white text-xl"></i>
</div>
<div class="mt-3 text-center sm:mt-5">
    <h3 class="text-lg font-semibold leading-6 text-gray-100" id="modal-title">
        @Title
    </h3>
    <div class="mt-2">
        <p class="text-sm text-gray-400">
            @Text
        </p>
    </div>
</div>
<div class="mt-5 sm:mt-6 flex justify-center">
    <button @onclick="Hide" type="button" class="btn btn-primary">
        Got it
    </button>
</div>

@code
{
    [Parameter] public string Title { get; set; }
    [Parameter] public string Text { get; set; }
}